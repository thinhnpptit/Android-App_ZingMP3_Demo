<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_galaxy"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/textviewTitle"
        android:padding="10dp"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:text="Ten bai hat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageButton
        android:id="@+id/btnPrev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="20dp"
        android:background="@null"
        android:src="@drawable/iconfinder_controls_chapter_previous_103454" />

    <ImageButton
        android:id="@+id/btnPlay"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="20dp"
        android:layout_toRightOf="@id/btnPrev"
        android:src="@drawable/iconfinder_play_arrow_326577" />

    <ImageButton
        android:id="@+id/btnStop"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="20dp"
        android:layout_toRightOf="@id/btnPlay"
        android:layout_alignParentBottom="true"
        android:background="@null"
        android:src="@drawable/iconfinder_icon_stop_211931"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageButton
        android:id="@+id/btnNext"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="20dp"
        android:layout_toRightOf="@id/btnStop"
        android:layout_alignParentBottom="true"
        android:background="@null"
        android:src="@drawable/iconfinder_controls_chapter_next_103453"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <SeekBar
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:padding="10dp"
        android:layout_above="@id/btnPrev"
        android:id="@+id/seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txtCurrentTime"
        android:textColor="#FFFFFF"
        android:layout_above="@id/seekbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txtTotalTime"
        android:layout_alignParentEnd="true"
        android:textColor="#FFFFFF"
        android:layout_above="@id/seekbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textSize="20sp" />

    <ImageView
        android:layout_centerHorizontal="true"
        android:id="@+id/ivDisc"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="250dp"
        app:srcCompat="@drawable/cd_music" />
</RelativeLayout>